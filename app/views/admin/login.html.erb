<p style="color: green"><%= flash[:notice] %></p>

<h1>Admin Login</h1>

<% form_tag do %>

<p>
	<label for="name">Name:</label> 
	<%= text_field_tag :name, params[:name] %>
</p>

<p> 
	<label for="password">Password:</label> 
	<%= password_field_tag :password, params[:password] %>
</p>

<p>
	<%= submit_tag "Login" %>
</p>

<% end %>
